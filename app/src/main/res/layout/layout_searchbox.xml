<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:scaleType="fitXY"
        android:src="@drawable/spotify"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_search"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_32"
        android:background="@null"
        android:gravity="right|bottom"
        android:hint="@string/edit_search"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@id/image_logo"
        app:layout_constraintLeft_toRightOf="@id/image_logo"
        app:layout_constraintRight_toRightOf="@id/view_line"
        app:layout_constraintTop_toTopOf="@id/image_logo" />

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_white"
        app:layout_constraintBottom_toBottomOf="@id/image_logo"
        app:layout_constraintLeft_toRightOf="@id/image_logo"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/button_search"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_4"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/view_line"
        app:layout_constraintLeft_toRightOf="@id/edit_search"
        app:layout_constraintRight_toRightOf="@id/view_line"
        app:layout_constraintTop_toTopOf="@id/image_logo" />

</android.support.constraint.ConstraintLayout>
